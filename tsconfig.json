{
	"compilerOptions": {
		"types": ["node", "jest", "@testing-library/jest-dom"],
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["es2020", "DOM"],
		"target": "es2019",
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"paths": {
			"$types": ["src/types"],
			"$types/*": ["src/types/*"],
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$assets": ["src/assets"],
			"$assets/*": ["src/assets/*"],
			"$scss": ["src/lib/scss"],
			"$scss/vars": ["src/lib/scss/variables.module.scss"],
			"$scss/*": ["src/lib/scss/*"],
			"$routes": ["src/routes"],
			"$routes/*": ["src/routes/*"]
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"],
	"exclude": ["src/**/*.spec.ts"]
}
